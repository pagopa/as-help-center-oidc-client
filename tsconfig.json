{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "baseUrl": "./",                                     
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@routes/*": ["src/routes/*"],
      "@config/*": ["src/config/*"],
      "@dtos/*": ["src/dtos/*"],
      "@errors/*": ["src/errors/*"],
      "@utils/*": ["src/utils/*"],
    },                                                 
    "outDir": "./dist",                                
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "noImplicitAny": true,                            
    "strictNullChecks": true,                         
    "strictFunctionTypes": true,                      
    "skipLibCheck": true                              
  }
}
